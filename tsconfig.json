{
    "include": [ "lib/**/*.ts", "lib/**/*.js", "lib/**/*.mjs" ],
    "compilerOptions": {
        "lib": [ "es6", "es2021", "esnext" ],
        "target": "es2021",
        "module": "commonjs",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "allowJs": true,
        "declaration": true,
        "declarationMap": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true
    }
}