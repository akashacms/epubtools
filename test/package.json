{
  "author": {
    "name": "David Herron",
    "email": "david@davidherron.com",
    "url": "http://davidherron.com"
  },
  "name": "akasharender-epub-test",
  "description": "AkashaEPUB test case",
  "version": "0.6.1",
  "homepage": "https://akashacms.com/epubtools/toc.html",
  "config": {
    "epubcheckjar": "/Users/david/bin/epubcheck-4.2.4/epubcheck.jar"
  },
  "scripts": {
    "test": "mocha ./index ./manifest ./toc ./build.mjs",
    "test-build": "mocha ./build.mjs",
    "test-clean": "shx rm -rf samples-3.0-test/epub30-spec*",
    "build": "npm-run-all build:setup build:mkmeta build:package",
    "build:setup": "shx rm -rf samples-3.0/epub30-spec-tmp && shx cp -R samples-3.0/epub30-spec samples-3.0-test/epub30-spec-tmp/",
    "build:mkmeta": "node ../cli.js mkmeta samples-3.0/epub30-spec-mkmeta.epubtools",
    "build:package": "node ../cli.js package samples-3.0/epub30-spec-mkmeta.epubtools",
    "check-spec": "npm-run-all check-spec:*",
    "check-spec:exp": "java -jar ${npm_package_config_epubcheckjar} -mode exp samples-3.0-test/epub30-spec-tmp/",
    "check-spec:epub": "java -jar ${npm_package_config_epubcheckjar} samples-3.0-test/epub30-spec-tmp.epub",
    "check-epub30-spec": "java -jar ${npm_package_config_epubcheckjar} samples-3.0/epub30-spec.epub",
    "check-epub30-tmp-spec": "java -jar ${npm_package_config_epubcheckjar} -mode exp samples-3.0-test/epub30-spec/",
    "env": "env"
  },
  "dependencies": {
    "chai": "^4.2.0",
    "mocha": "^8.2.0",
    "npm-run-all": "^4.1.5",
    "shelljs": "^0.8.4",
    "shx": "^0.3.3"
  }
}
